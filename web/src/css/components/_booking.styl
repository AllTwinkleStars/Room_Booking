.content__nested
  display grid
  grid-gap 2rem
  grid-template-columns 1fr 2fr 2fr
  margin 2rem

.content__calendar
  grid-column 1
  grid-row 3

.content__table
  grid-column 2
  grid-row 3

.content__form
  background lightGrey
  grid-column 3
  grid-row 3
  padding 4rem

.container__main
  background lightGrey
  color darkGrey
  margin 10rem auto
  padding 3rem
  width 40rem

.container__form
  padding 2rem 0
  margin 0 auto
  max-width 30rem

.form__group
  margin 0 auto

.form__label
  display block
  font-weight 500
  margin 1rem auto
  text-align left
  &--inline
    display inline-block
    padding-left 1rem
    margin 0.3rem auto

.form__input
  display block
  font-size 1.6rem
  margin 0.6rem 0 2rem 0
  padding 1rem 1.6rem
  width 27rem

input[type=checkbox]
  box-shadow none
  height 1.6rem
  width 1.6rem

input[type=radio]
  box-shadow none
  height 1.6rem
  width 1.6rem

.button__form--submit
.button--google
  margin 1rem 0
  width 30.6rem

.form__heading--filter
  margin 0.8rem 0

.form__input
  &:active
  &:focus
    outline none
.form__input--time
  border 0.1em solid darkGrey
  display inline-block
  margin 1rem 0 1rem 1rem
  width 12rem

// Calendar

.rdtToday
  &::before
    border-bottom 7px solid brightRed

.rdtActive
  background brightRed
  color #fff
  &:hover
    background lightGrey
    color darkGrey

// Make a booking form

.form__input--select
  border 1px solid darkGrey
  background #fff
  width 20rem
  height 3rem

.form__input--textarea
  height 10rem
  width 100%
